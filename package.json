{
  "name": "batjaa-blog",
  "version": "1.0.0",
  "description": "Personal blog and portfolio site built with Hugo",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "css:build": "lessc --math=always themes/mongkok/static/css/index.less themes/mongkok/assets/css/index.css",
    "css:watch": "lessc --math=always themes/mongkok/static/css/index.less themes/mongkok/assets/css/index.css --watch",
    "dev": "npm run css:build && hugo serve --ignoreCache --forceSyncStatic",
    "build": "npm run css:build && hugo --minify",
    "clean": "rm -rf public",
    "newsletter:install": "cd newsletter && npm install",
    "newsletter:build": "cd newsletter && npm run build",
    "newsletter:preview": "cd newsletter && npm run dev",
    "newsletter:send:test": "cd newsletter && npm run send:test",
    "newsletter:new": "node scripts/new-newsletter.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@netlify/functions": "^5.1.2",
    "@types/node": "^25.2.0",
    "less": "^4.2.0",
    "vitest": "^4.0.18"
  },
  "author": "Batjargal Batbold",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.17.0"
  }
}
